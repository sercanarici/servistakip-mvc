@model IEnumerable<ServisTakipMVC.MODEL.Musteri>

@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Create", "Musteri")" class="btn btn-primary">Yeni Müşteri</a>
        <hr />
        <div class="card">
            <form method="get">
                <div class="card-header">
                    <h3 class="card-title">Müşteri Listesi</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- /.box-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.FirmaAdi)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                            <th>@Html.DisplayNameFor(model => model.Yetkili)</th>
                            <th>@Html.DisplayNameFor(model => model.Adres)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.FirmaAdi)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                                <td><span class="badge bg-success">@Html.DisplayFor(modelItem => item.Yetkili)</span></td>
                                <td>@Html.DisplayFor(modelItem => item.Adres)</td>
                                <td class="float-right">
                                    <a href="@Url.Action("Edit", "Musteri", new { id = item.Id })" class="btn btn-primary">Düzenle</a>
                                    <a href="@Url.Action("Details", "Musteri", new { id = item.Id })" class="btn btn-success">İncele</a>
                                    <a href="@Url.Action("Delete", "Musteri", new { id = item.Id })" class="btn btn-danger">Sil</a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>




@model IEnumerable<ServisTakipMVC.MODEL.Musteri>

@{
    ViewBag.Title = "Müşteriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Create", "Musteri")" class="btn btn-primary">Yeni Müşteri</a>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Müşteri Listesi</h3>
                <div class="box-tools">
                    <div class="input-group">
                        <input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.FirmaAdi)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                        <th>@Html.DisplayNameFor(model => model.Yetkili)</th>
                        <th>@Html.DisplayNameFor(model => model.Adres)</th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirmaAdi)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                            <td><span class="label label-success">@Html.DisplayFor(modelItem => item.Yetkili)</span></td>
                            <td>@Html.DisplayFor(modelItem => item.Adres)</td>
                            <td class="pull-right">
                                <a href="@Url.Action("Edit", "Musteri", new { id = item.Id })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("Details", "Musteri", new { id = item.Id })" class="btn btn-success">Details</a>
                                <a href="@Url.Action("Delete", "Musteri", new { id = item.Id })" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                    }

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>




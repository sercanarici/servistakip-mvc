@model ServisTakipMVC.MODEL.ServisForm

@{
    ViewBag.Title = "Servis Detay";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<dt>
    @Html.DisplayNameFor(model => model.KayitTarihi)
</dt>

<dd>
    @Html.DisplayFor(model => model.KayitTarihi)
</dd>
<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Servis Bilgileri</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <div class="card-body">
                <div class="form-group">
                    <label>Müşteri</label>
                    @Html.EditorFor(model => model.Musterisi.FirmaAdi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                </div>

                <div class="form-group">
                    <label for="belgeno">Belge No</label>
                    @Html.EditorFor(model => model.BelgeNo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })


                </div>

                <div class="form-group">
                    <label>Servis Tipi</label>
                    @Html.EditorFor(model => model.ServisTipi.Adi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                </div>

                <div class="form-group">
                    <label>Servis İçeriği</label>
                    @Html.EditorFor(model => model.ServisIcerigi.Adi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>

                <div class="form-group">
                    <label>Servis Şekli</label>
                    @Html.EditorFor(model => model.ServisSekli.Adi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                </div>

                <div class="form-group">
                    <label>Başlangıç Tarihi</label>
                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                        </div>
                        @Html.EditorFor(model => model.BaslangicTarihi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <label>Bitiş Tarihi</label>
                    <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
                        <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                        </div>
                        
                        @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control", disabled="disabled" } })

                    </div>
                </div>

                <div class="form-group">
                    <label>Yapılan İşlemler</label>
                    @Html.TextAreaFor(model => model.YapilanIslemler, new { @class = "form-control", disabled="disabled" })
                </div>

                <div class="form-group">
                    <label>Not</label>
                    @Html.TextAreaFor(model => model.Notlar, new { @class = "form-control", disabled="disabled" })
                </div>

                <div class="form-group">
                    <label>Müşteri Ad-Soyad</label>
                    @Html.EditorFor(model => model.MusteriAdi, new { htmlAttributes = new { @class = "form-control", disabled="disabled" } })
                </div>

                <div class="form-group">
                    <label>Bakım Anlaşması</label>
                    @Html.EditorFor(model => model.BakimAnlasmasi.AnlasmaTipi.Adi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>

                <div class="form-group">
                    <label>Servis Ücreti</label>
                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.ServisUcreti, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label>Para Birimi</label>
                    <select class="form-control" name="ParaBirimi" disabled>
                        <option value="">--Seçiniz--</option>
                        <option value="TL">Türk Lirası</option>
                        <option value="$">Amerikan Doları</option>
                    </select>
                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.Odendi, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } }) Ödendi
                    </label>
                </div>

            </div><!-- /.box-body -->

            <div class="card-footer">
                @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Servis Formu listesine geri dön", "Index")
            </div>

        </div><!-- /.box -->
        <div>
            @Html.ActionLink("Müşteri listesine geri dön", "Index")
        </div>
    </div>
</div>

<p>
    
</p>

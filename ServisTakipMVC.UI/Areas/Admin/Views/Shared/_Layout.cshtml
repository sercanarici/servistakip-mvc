        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/Areas/Admin/Static/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- ChartJS -->
    <script src="~/Areas/Admin/Static/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Areas/Admin/Static/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/Areas/Admin/Static/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Areas/Admin/Static/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>

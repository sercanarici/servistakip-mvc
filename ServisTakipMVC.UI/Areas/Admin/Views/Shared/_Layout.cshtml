    <script src="~/Areas/Admin/Static/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Areas/Admin/Static/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/Areas/Admin/Static/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/Areas/Admin/Static/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Static/dist/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes)
    <script src="~/Areas/Admin/Static/dist/js/pages/dashboard.js"></script>

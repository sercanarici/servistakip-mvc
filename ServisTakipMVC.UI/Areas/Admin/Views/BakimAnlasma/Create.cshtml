@model ServisTakipMVC.MODEL.BakimAnlasma

@{
    ViewBag.Title = "Yeni Bakım Anlaşması";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Müşteri Bilgileri</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Müşteri Adı</label>
                        @Html.DropDownListFor(model => model.MusteriId, ViewBag.Musteriler as SelectList, "Seçiniz...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MusteriId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Anlaşma Tipi</label>
                        @Html.DropDownListFor(model => model.BakimAnlasmaTipId, ViewBag.AnlasmaTipleri as SelectList, "Seçiniz...", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BakimAnlasmaTipId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Başlangıç Tarihi</label>
                        <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                            @Html.TextBoxFor(model => model.BaslangicTarihi, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.BaslangicTarihi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                        <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
                            <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                            </div>
                            @Html.TextBoxFor(model => model.BitisTarihi, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.BitisTarihi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Not</label>
                        @Html.TextAreaFor(model => model.Not, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Not, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Anlaşılan Fiyat</label>
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.AnlasilanFiyat, new { htmlAttributes = new { @class = "form-control" } })

                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.AnlasilanFiyat, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Para Birimi</label>
                        <select class="form-control" name="ParaBirimi">
                            <option value="">--Seçiniz--</option>
                            <option value="TL">Türk Lirası</option>
                            <option value="$">Amerikan Doları</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.ParaBirimi, "", new { @class = "text-danger" })
                    </div>

                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.Odendi, new { htmlAttributes = new { @class = "form-control" } }) Ödendi
                        </label>
                    </div>

                </div><!-- /.box-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div><!-- /.box -->
        <div>
            @Html.ActionLink("Müşteri listesine geri dön", "Index")
        </div>
    </div>
</div>

@section extraJS
{
    <script>
        $(function () {

            $('#datetimepicker1').datetimepicker({
                format: 'DD.MM.YYYY',
                icons: {
                    time: "far fa-clock",
                },
                locale: 'tr'
            });

            $('#datetimepicker2').datetimepicker({
                format: 'DD.MM.YYYY',
                icons: {
                    time: "far fa-clock",
                },
                locale: 'tr'
            });
        })
    </script>

}